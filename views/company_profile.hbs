<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark" style=" height:40px;">
        <a href="#" class="navbar-brand">TestHub</a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarMenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarMenu">
            <ul class="navbar-nav ml-auto">
                {{!-- ul can have a class mr-auto-->shifts links to the left --}}
                <li class="nav-item">
                    <a href="#" class="nav-link">Profile</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container my-container" style="max-width: 90%;">
        <div class="row row-border">
            <h2>Profile</h2>
        </div>
        <div class="back">
            <form>
                <div class="form-group">
                    <p>Company Name : <input id="company_name" type="text" class="form-control " readonly
                            placeholder=" Company Name" value="{{data.user.name}}"></p>

                </div>
                <div class="form-group">
                    <p>Domain : <input id="domain" type="email" class="form-control " readonly placeholder=" Domain" value="{{data.user.domain}}">
                    </p>
                </div>

                <div class="form-group">
                    <p>Email Id : <input id="email" type="email" class="form-control " readonly placeholder=" Email" value="{{data.user.email}}">
                    </p>
                </div>
                <div class="form-group">
                    <p>Location :<input id="location" type="text" class="form-control " readonly
                            placeholder=" Location" value="{{data.user.location}}"></p>
                </div>
                 <div class="form-group row " style="margin-bottom: 0;">
                    <div class="col">
                        <p>Password :<input id="password" type="password" class="form-control " readonly
                                placeholder=" Password" value="{{data.user.password}}">
                    </div>
                    <div style="margin-top: 35px;" class="col">
                        <a  href="/resetpassword">Reset Password</a></p>
                    </div>
                </div>
               
            </form>


        </div>

        <div class="row" style="height: 20px;"> <div class="col"></div> </div>

    </div>



</body>